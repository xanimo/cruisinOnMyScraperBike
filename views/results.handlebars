{{#if result}}
	{{#each result}}
		<!-- Jumbotron search fields -->
		<h1 class="display-4">News Scraper</h1>
		<div class="jumbotron">
			<div class="container">
				<div class="form-row">
<!-- 
					{{this.last_login}} -->

<!-- 					{{this.email}}
					{{this.firstname}}
					{{this.lastname}} -->
				</div>
  				<div class="form-row">
					<button id="scrape" class="btn btn-dark form-control" data-id="{{this._id}}">Scrape Headlines</button>
				</div>
			</div>
		</div>

		{{#if this.headline}}
		<!-- Results list -->
		<div class="container">
			<div class="col-md-12">
				<h1 class="display-5">Results</h1>
				{{#each this.headline}}
				<!-- Rendering results -->
					<a href="headlines/{{this._id}}" class="list-group-item list-group-item-action flex-column align-items-start bg-light">
						<br />
						<div class="card mb-3">
<!-- 						  <img class="card-img-top" src="..." alt="Card image cap"> -->
						  <div class="card-body">
						    <h5 class="card-title">{{this.title}}</h5>
						    <p class="card-text">{{this.link}}</p>
						    <p class="card-text"><small id="date" class="text-muted">{{this.date}}</small></p>
						    <button id="saveheadline" class="btn btn-primary" data-id="{{this._id}}">Save Headline</button>
						    <button id="deleteheadline" class="btn btn-warning float-right" data-id="{{this._id}}">Delete Headline</button>
						  </div>
						</div>
					</a>
					<br />
				{{/each}}
		{{/if}}	
